<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/thiennhien"
    android:orientation="vertical">horizontal

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgsub"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:backgroundTint="#FFFF33"
            android:background="@drawable/ic_fast_rewind_black_18dp"
            android:layout_weight="0.85" />

        <TextView
            android:id="@+id/TimeThongke"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="0.63"
            android:textColor="#FF3333"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="@color/xanh"
            android:text="3/2017"

            android:textSize="10pt" />

        <ImageButton
            android:id="@+id/imgAdd"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:backgroundTint="#FFFF33"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_fast_forward_black_18dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:background="@color/xanh"
                android:gravity="center"
                android:text="Tên"
                android:textSize="20pt" />
        </LinearLayout>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tiền"
                android:background="@color/xanh"
                android:textSize="20pt" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtvTienthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:textColor="@color/den"
                android:text="Tiền thu:"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tvtienthu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtvtienchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:text="Tien chi:"
                android:textColor="@color/den"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tvtienchi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txtvhieu"
                android:textColor="@color/den"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="8"
                android:text="Dư:"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/tvhieu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </LinearLayout>

</LinearLayout>