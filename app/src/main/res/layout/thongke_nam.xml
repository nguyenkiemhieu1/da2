<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/thiennhien"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="0.85"

            android:backgroundTint="#FFFF33"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_fast_rewind_black_18dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_weight="0.63"
            android:gravity="center"
            android:background="@color/xanh"
            android:text="2017"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="30dp"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#FFFF33"
            android:background="@drawable/ic_fast_forward_black_18dp"
            android:layout_weight="1">

        </ImageButton>
    </TableRow>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:background="@color/xanh"
                android:gravity="center"
                android:text="Tên"
                android:textSize="20pt" />
        </LinearLayout>
        <TextView
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tiền"
                android:background="@color/xanh"
                android:textSize="20pt" />
        </LinearLayout>
    </LinearLayout>

    <TableRow
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namtienthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:textColor="@color/den"
            android:text="Tiền thu:"
            android:textSize="10pt"  />

        <TextView
            android:id="@+id/namhttienthu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/namtienchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:textColor="@color/den"
            android:text="Tiền chi:"
            android:textSize="10pt"  />

        <TextView
            android:id="@+id/namhttienchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/notien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:textColor="@color/den"
            android:text="Dư:"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/nohienthi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </TableRow>
</LinearLayout>